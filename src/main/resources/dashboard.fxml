<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController"
            prefHeight="600.0"
            prefWidth="1000.0">

    <children>

        <!-- TOP NAVBAR -->
        <Pane layoutX="0.0"
              layoutY="0.0"
              prefWidth="1000.0"
              prefHeight="70.0"
              style="-fx-background-color: linear-gradient(to right, #1CB5A3, #70D36B);">

            <children>
                <Label text="MINDNEST"
                       layoutX="30.0"
                       layoutY="20.0"
                       style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;" />
            </children>

        </Pane>

        <!-- SIDEBAR -->
        <VBox layoutX="0.0"
              layoutY="70.0"
              prefWidth="220.0"
              prefHeight="530.0"
              spacing="15"
              style="-fx-background-color:#F2F2F2; -fx-padding:20;">

            <children>
                <Button text="Self-Reflection &amp; Journaling" prefWidth="180"/>
                <Button text="Psychologist &amp; Therapy" prefWidth="180"/>
                <Button text="Personal Development Coaching"
                        prefWidth="180"
                        style="-fx-background-color:#DCE5DC;"/>
                <Button text="Self-Help Content" prefWidth="180"/>
            </children>

        </VBox>

        <!-- MAIN CONTENT AREA -->
        <AnchorPane fx:id="contentArea"
                    layoutX="220.0"
                    layoutY="70.0"
                    prefWidth="780.0"
                    prefHeight="530.0">

            <children>

                <!-- Vertical scroll for the whole dashboard content -->
                <ScrollPane layoutX="0.0"
                            layoutY="0.0"
                            prefWidth="780.0"
                            prefHeight="530.0"
                            fitToWidth="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            style="-fx-background-color:transparent; -fx-background-insets:0;">

                    <content>
                        <AnchorPane prefWidth="780.0"
                                    prefHeight="680.0"
                                    style="-fx-background-color:transparent;">

                            <children>

                                <!-- Add Plan Button -->
                                <Button text="+ Add Plan"
                                        onAction="#openAddPlan"
                                        layoutX="280.0"
                                        layoutY="20.0"
                                        prefWidth="200.0"
                                        prefHeight="40.0"
                                        style="-fx-font-size:16px;" />

                                <!-- My Plans Title -->
                                <Label text="My Coaching Plans"
                                       layoutX="40.0"
                                       layoutY="90.0"
                                       style="-fx-font-size:18px; -fx-font-weight:bold;" />

                                <!-- My Plans: horizontal scroll so cards never overflow -->
                                <ScrollPane layoutX="40.0"
                                            layoutY="130.0"
                                            prefWidth="700.0"
                                            prefHeight="210.0"
                                            fitToHeight="true"
                                            fitToWidth="false"
                                            hbarPolicy="AS_NEEDED"
                                            vbarPolicy="NEVER"
                                            pannable="true"
                                            style="-fx-background-color:transparent; -fx-background-insets:0; -fx-padding:0;">
                                    <content>
                                        <HBox fx:id="myPlansContainer"
                                              spacing="15"
                                              style="-fx-padding:5;" />
                                    </content>
                                </ScrollPane>

                                <!-- Other Plans Title -->
                                <Label text="Explore Other Plans"
                                       layoutX="40.0"
                                       layoutY="365.0"
                                       style="-fx-font-size:18px; -fx-font-weight:bold;" />

                                <!-- Other Plans: horizontal scroll so cards never overflow -->
                                <ScrollPane layoutX="40.0"
                                            layoutY="405.0"
                                            prefWidth="700.0"
                                            prefHeight="210.0"
                                            fitToHeight="true"
                                            fitToWidth="false"
                                            hbarPolicy="AS_NEEDED"
                                            vbarPolicy="NEVER"
                                            pannable="true"
                                            style="-fx-background-color:transparent; -fx-background-insets:0; -fx-padding:0;">
                                    <content>
                                        <HBox fx:id="otherPlansContainer"
                                              spacing="15"
                                              style="-fx-padding:5;" />
                                    </content>
                                </ScrollPane>

                            </children>
                        </AnchorPane>
                    </content>

                </ScrollPane>

            </children>

        </AnchorPane>

    </children>

</AnchorPane>
