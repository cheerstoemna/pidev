<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.QuizController"
      stylesheets="@css.css"
      spacing="10" alignment="CENTER">

    <!-- Header -->
    <HBox spacing="10">
        <Label text="Quizzes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button fx:id="addQuizBtn" text="+ Add Quiz" style="-fx-font-size: 16px;"/>
    </HBox>

    <!-- Quiz List -->
    <ListView fx:id="quizList" prefHeight="400"/>
</VBox>
