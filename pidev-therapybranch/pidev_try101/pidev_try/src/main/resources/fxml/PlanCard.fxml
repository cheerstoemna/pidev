<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="160"
            prefHeight="180"
            style="-fx-background-color: white;
                   -fx-background-radius: 15;
                   -fx-border-radius: 15;
                   -fx-border-color: #E0E0E0;">

    <children>

        <!-- Plan Image -->
        <ImageView fx:id="planImage"
                   fitWidth="120"
                   fitHeight="100"
                   layoutX="20"
                   layoutY="15"
                   preserveRatio="true" />

        <!-- Plan Title -->
        <Label fx:id="planTitle"
               text="Plan Title"
               layoutX="15"
               layoutY="125"
               prefWidth="130"
               wrapText="true"
               alignment="CENTER"
               style="-fx-font-size:14px;
                      -fx-font-weight:bold;" />

    </children>

</AnchorPane>
