<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TherapyLayoutController"
            prefWidth="1200" prefHeight="720"
            style="-fx-background-color: #f5f6fa;">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15"
              style="-fx-background-color: linear-gradient(to right, #1abc9c, #16a085);
                     -fx-padding: 12 30;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ§ " style="-fx-font-size: 24px;"/>
                <Label text="MINDNEST"
                       style="-fx-text-fill: white; -fx-font-size: 18px;
                              -fx-font-weight: bold; -fx-font-family: 'Segoe UI';"/>
            </HBox>

            <TextField promptText="ðŸ” Search"
                       prefWidth="400"
                       style="-fx-background-color: rgba(255,255,255,0.2);
                              -fx-background-radius: 20;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: rgba(255,255,255,0.7);
                              -fx-padding: 8 16;
                              -fx-border-color: transparent;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label fx:id="userLabel" text="User: Loading..."
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>

                <StackPane style="-fx-background-color: white;
                                 -fx-background-radius: 20;
                                 -fx-min-width: 40;
                                 -fx-min-height: 40;
                                 -fx-max-width: 40;
                                 -fx-max-height: 40;">
                    <Label text="ðŸ‘¤" style="-fx-font-size: 20px;"/>
                </StackPane>

                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #27ae60;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;"/>
            </HBox>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="3"
              style="-fx-background-color: #2c3e50;
                     -fx-padding: 20 0;
                     -fx-min-width: 220;">

            <!-- PATIENT SECTION -->
            <VBox fx:id="patientSection" spacing="3" style="-fx-padding: 10 0;">
                <Label text="PATIENT"
                       style="-fx-text-fill: #95a5a6;
