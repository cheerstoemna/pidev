<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TherapyLayoutController"
            stylesheets="@../css/therapy.css"
            styleClass="root">

    <top>
        <HBox spacing="10" styleClass="topbar" BorderPane.alignment="CENTER">
            <Label text="MindNest â€¢ Therapy Module" styleClass="title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userLabel" styleClass="subtitle"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" styleClass="sidebar" BorderPane.alignment="CENTER">
            <Button fx:id="btnClient" text="Client" onAction="#openClient" styleClass="nav-btn"/>
