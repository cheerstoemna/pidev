<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.JournalController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Title Label -->
    <Label text="Journal Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Form Inputs -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Content:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="contentField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Mood:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="moodField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10">
        <padding>
            <Insets top="10" right="0" bottom="10" left="0"/>
        </padding>
        <Button text="Add" fx:id="addBtn"/>
        <Button text="Update" fx:id="updateBtn"/>
        <Button text="Delete" fx:id="deleteBtn"/>
        <Button text="Clear" fx:id="clearBtn"/>
    </HBox>

    <!-- Table View -->
    <TableView fx:id="journalTable" prefHeight="300">
        <columns>
            <TableColumn text="ID" fx:id="idCol" prefWidth="50"/>
            <TableColumn text="Title" fx:id="titleCol" prefWidth="150"/>
            <TableColumn text="Content" fx:id="contentCol" prefWidth="300"/>
            <TableColumn text="Mood" fx:id="moodCol" prefWidth="100"/>
            <TableColumn text="Date" fx:id="dateCol" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
